{
  "manifest_version": 2,
  "name": "Saskatoon - Disney+ Auto Viewer",
  "version": "1.0.0",
  "description": "Automatically advances to next episode, re-enters fullscreen, and re-enables subtitles on Disney+.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "windows"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.disneyplus.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "saskatoon@disney-auto-viewer",
      "strict_min_version": "91.0"
    }
  }
}
